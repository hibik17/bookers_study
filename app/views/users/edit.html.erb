<div>
  <%= flash[:notice] %>
</div>

<h2>User info</h2>

<% if @user.errors.any? %>
  <div>
    <%= @user.errors.count %> errors prohibited this object from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user do |f| %>
  <div class="form-group">
    <label for="inputName">Name</label>
    <div><%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %></div>
  </div>
  
  <div class="form-group">
    <label for="inputImage">Image</label>
    <div><%= f.file_field :profile_image, id: "inputImage", placeholder: "プロフィール画像", accept: "image/*" %></div>
  </div>
  
  <div class="form-group">
    <label for="inputIntroduction">Introduction</label>
    <div><%= f.text_area :introduction, id: "inputIntroduction" %></div>
  </div>
  
  <div class="actions">
    <%= f.submit "Update User", class: "btn btn-primary" %>
  </div>
<% end %>