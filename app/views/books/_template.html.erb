<h1>User info</h1>
<table class="table">
  <tr>
    <%= image_tag user.get_profile_image(100, 100) %>
  </tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>

<div class="row">
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>  
  ユーザー編集
  <% end %>
</div>

<% if book.errors.any? %>
  <div>
    <%= book.errors.count %> error prohibited this obj from being saved:
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>New book</h1>
<%= form_with model: book do |f| %>
  <div>
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
  </div>

  <div class="form-group form-group_tags">
    <%= f.label :tag_list, "Tag", class: "form-label" %>
    <%= f.text_field :tag_list, id: "tag_input", class: "form-control", data: { role: "tagsinput" } %>
    <%= f.hidden_field :tag_list, id: "tag_list_hidden" %>
  </div>

  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>

<style>
#tag_input {
  min-width: 100px;
}

.tag.label.label-info {
  margin-right: 5px;
  padding: 5px;
  background-color: #f0f0f0;
  border-radius: 5px;
}
</style>
